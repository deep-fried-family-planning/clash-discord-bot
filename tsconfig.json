{
    "compilerOptions": {
        "target"                    : "esnext",
        "lib"                       : ["esnext"],
        "module"                    : "esnext",
        "moduleResolution"          : "bundler",
        "isolatedModules"           : true,
        "esModuleInterop"           : true,
        "verbatimModuleSyntax"      : true,
        "allowArbitraryExtensions"  : true,
        "allowImportingTsExtensions": true,
        "strict"                    : true,
        "baseUrl"                   : "./",
        "paths"                     : {
            "#src"  : ["src"],
            "#src/*": ["src/*"]
        }
    }
}
