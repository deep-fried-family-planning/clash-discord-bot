{
  "compilerOptions": {
    "target"                      : "esnext",
    "jsx"                         : "react-jsx",
    "jsxImportSource"             : "#disreact/dsx",
    "module"                      : "esnext",
    "moduleResolution"            : "bundler",
    "isolatedModules"             : true,
    "esModuleInterop"             : true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax"        : true,
    "allowArbitraryExtensions"    : true,
    "allowImportingTsExtensions"  : true,
    "strict"                      : true,
    "exactOptionalPropertyTypes"  : true,
    "baseUrl"                     : "./",
    "paths"                       : {
      "#disreact/dsx/*": ["src/disreact/dsx/*"],
      "#disreact/*"    : ["src/disreact/*"],
      "#src/*"         : ["src/*"],
      "#pure/effect"   : ["src/internal/pure/effect.ts"],
      "#pure/dfx"      : ["src/internal/pure/dfx.ts"]
    }
  }
}
