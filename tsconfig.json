{
  "compilerOptions": {
    "target"                      : "esnext",

    "jsx"                         : "react-jsx",
    "jsxImportSource"             : "src/internal/disreact/jsx",

    "module"                      : "esnext",
    "moduleResolution"            : "bundler",
    "isolatedModules"             : true,
    "esModuleInterop"             : true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax"        : true,
    "allowArbitraryExtensions"    : true,
    "allowImportingTsExtensions"  : true,
    "strict"                      : true,
    "exactOptionalPropertyTypes"  : true,
    "baseUrl"                     : "./",
    "paths"                       : {
      "@disreact"        : ["./src/internal/disreact/jsx"],
      "@disreact-jsx/*"        : ["./src/internal/disreact/jsx/*"],
      "#src"               : ["src"],
      "#src/*"             : ["src/*"],
      "#dfdis"             : ["src/internal/discord/index.ts"],
      "#discord/*"         : ["src/internal/discord/*"],
      "#discord/entities"  : ["src/internal/discord/entities"],
      "#discord/entities/*": ["src/internal/discord/entities/*"],
      "#pure/effect"       : ["src/internal/pure/effect.ts"],
      "#pure/dfx"          : ["src/internal/pure/dfx.ts"],
      "#disreact/*"        : ["./src/internal/disreact/*"]
    }
  }
}
